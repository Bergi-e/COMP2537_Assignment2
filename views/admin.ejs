<%- include('templates/header') %>

<div class="container py-5">
  <h1 class="mb-4">Admin Page</h1>
  <table cellpadding="5" cellspacing="0">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Type</th>
        <th class="text-end">Action</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(u => { %>
        <tr>
          <td><%= u.name %></td>
          <td><%= u.email %></td>
          <td><%= u.user_type %></td>
          <td class="text-end">
            <% if (u.user_type === 'user') { %>
              <a href="/admin/promote?id=<%= u._id %>" class="btn btn-danger btn-sm">Promote</a>
            <% } else { %>
              <a href="/admin/demote?id=<%= u._id %>" class="btn btn-success btn-sm">Demote</a>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('templates/footer') %>
