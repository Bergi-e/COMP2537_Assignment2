<%- include('templates/header') %>

<h1>Admin Page</h1>
<table border="1" cellpadding="5" cellspacing="0">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Type</th>
    <th>Action</th>
  </tr>
  <% users.forEach(u => { %>
    <tr>
      <td><%= u.name %></td>
      <td><%= u.email %></td>
      <td><%= u.user_type %></td>
      <td>
        <% if (u.user_type === 'user') { %>
          <a href="/admin/promote?id=<%= u._id %>">Promote</a>
        <% } else { %>
          <a href="/admin/demote?id=<%= u._id %>">Demote</a>
        <% } %>
      </td>
    </tr>
  <% }) %>
</table>

<%- include('templates/footer') %>
